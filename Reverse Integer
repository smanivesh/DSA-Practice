//Reverse Integer
//https://leetcode.com/problems/reverse-integer/description/

class Solution {
public:

int rev(int n)
{
    int ans=0;
    while(n!=0)
    {
        int rem= n%10;
        if(ans<= INT_MAX/10 && ans>=INT_MIN/10 ){
            ans= (ans*10)+ rem;
            n=n/10;
        }
        else{
            return 0;
        }
        
    }
    return ans;
}
    int reverse(int x) {
        
        return rev(x);
    }
};
